<import src="post-item/post-item-template.wxml"></import>
<view>
    <swiper vertical="520"  indicator-dots="true" autoplay="true" interval="2000">
        <swiper-item>
            <image src="/images/wx.png"></image>
        </swiper-item>
        <swiper-item>
            <image src="/images/vr.png"></image>
        </swiper-item>
        <swiper-item>
            <image src="/images/iqiyi.png"></image>
        </swiper-item>
    </swiper>
    <brock wx:for="{{postList}}" wx:for-item="item">
        <template is="postItem" data="{{item}}"></template>
    </brock>
</view>