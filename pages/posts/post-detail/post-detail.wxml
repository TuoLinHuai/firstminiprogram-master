<view class="container">
    <image src="{{isPlayingMusic?postData.music.coverImg:postData.headImgSrc}}" class="head-image"></image>
    <image catchtap="onMusicTap" src="{{isPlayingMusic?'/images/music/music-stop.png':'/images/music/music-start.png'}}" class="audio"></image>
    <view class="author-data">
        <image src="{{postData.avatar}}" class="avatar"></image>
        <text class="author">{{postData.author}}</text>
        <text class="const-text">发表于</text>
        <text class="date">{{postData.dateTime}}</text>
    </view>
    <text class="title">{{postData.title}}</text>
    <view class="tool">
        <view class="circle-image">
            <image wx:if="{{collected}}" catchtap="onColletionTap" src="/images/icon/collection.png"></image>
            <image wx:else src="/images/icon/collection-anti.png" catchtap="onColletionTap" class="share-img"></image>
            <image catchtap="onShareTap" src="/images/icon/share.png" class="share-img"></image>
        </view>
        <view class="horizon"></view>
    </view>
   <text class="detail">{{postData.detail}}</text>
</view>